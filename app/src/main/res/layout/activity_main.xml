<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/Relativewhats"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@color/waback">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:text="WhatsApp"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="339dp"
            android:layout_marginVertical="4dp"
            android:src="@drawable/ic_baseline_search_24" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="383dp"
            android:layout_marginVertical="4dp"
            android:src="@drawable/ic_baseline_more_vert_24" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="88dp"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/ic_baseline_camera_alt_24" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal"
            android:background="@color/waback">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginLeft="30dp"
            android:text="CHATS"
            android:textColor="@color/teal_200"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="60dp"
            android:text="STATUS"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="bold" />

            <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="CALLS"
                   android:textColor="@android:color/darker_gray"
                   android:textSize="15dp"
                   android:layout_marginVertical="12dp"
                   android:textStyle="bold"
                   />

        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Relativewhats"
        android:id="@+id/Whatsapplist"
        android:background="@android:color/black"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@color/teal_200"
        android:layout_marginTop="640dp"
        android:layout_marginHorizontal="325dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_baseline_chat_24"
        android:layout_marginTop="655dp"
        android:layout_marginHorizontal="342dp"/>



</RelativeLayout>