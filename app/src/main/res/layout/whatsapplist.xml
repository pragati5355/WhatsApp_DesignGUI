<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilepicwhatsapp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/dad"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="7dp"/>

    <TextView
        android:id="@+id/namewhats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dad"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="5dp"/>

    <ImageView
        android:id="@+id/tickimage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_done_all_24"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="70dp"/>

    <TextView
        android:id="@+id/textmsgwhats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp"
        android:layout_marginVertical="31dp"
        android:layout_marginHorizontal="99dp"/>

    <TextView
        android:id="@+id/texttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00am"
        android:textSize="12dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginHorizontal="345dp"
        android:layout_marginVertical="7dp"/>
</RelativeLayout>